pipeline {
    agent any

    stages {

        stage('Stop Old Containers') {
            steps {
                sh 'docker compose down -v || true'
            }
        }

        stage('Build & Deploy Using Compose') {
            steps {
                sh '''
                docker compose up -d --build
                '''
            }
        }

        stage('Verify Running Containers') {
            steps {
                sh 'docker ps'
            }
        }
    }
}
